<h1>Log In</h1>

<%= form_tag user_sessions_path do %>
    <%= label_tag :email, "Email Address" %><br>
    <%= text_field_tag :email, params[:email] %>
    <br />

    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
    <br />

    <%= submit_tag "Log In" %>
    <%= link_to "Forgot Password", new_password_reset_path %>
<% end %>